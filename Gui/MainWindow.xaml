<Window x:Class="Egomotion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Egomotion"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="100*"/>
                    <RowDefinition Height="100*"/>
                </Grid.RowDefinitions>
                <local:ImageViewer Grid.Row="0" x:Name="imageViewer"/>
                <StackPanel x:Name="functions" Grid.Row="1">
                    <Button Click="LoadImage">Load Image</Button>
                    <Button Click="ProcessImage">Process Image</Button>
                    <local:AlgorithmParametersInput x:Name="parametersInput"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
